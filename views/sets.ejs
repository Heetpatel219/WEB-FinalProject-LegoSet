<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lego Collection</title>
  <link rel="stylesheet" href="/css/main.css" />
  <style>
    .set-card {
      background: white;
      border-radius: 12px;
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease;
      overflow: hidden;
    }

    .set-card:hover {
      transform: translateY(-5px);
    }

    .set-image {
      width: 100%;
      height: 200px;
      object-fit: cover;
    }

    .set-info {
      padding: 1.5rem;
    }

    .set-name {
      font-size: 1.25rem;
      font-weight: bold;
      margin-bottom: 0.5rem;
    }
  </style>
</head>

<body>
  <%- include('partials/navbar', { page: '/lego/sets' }) %>

  <div class="container mx-auto">
    <div class="hero rounded-lg p-8 mb-8">
      <div class="hero-content text-center">
        <div class="max-w-md">
          <h1 class="text-5xl font-bold text-indigo-900">LEGO Sets</h1>
          <p class="py-6 text-gray-700">Explore our amazing collection of LEGO sets</p>
          <a href="/lego/addSet" class="btn btn-primary">Add New Set</a>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% sets.forEach(set => { %>
        <div class="set-card">
          <img src="<%= set.img_url %>" alt="<%= set.name %>" class="set-image">
          <div class="set-info">
            <h2 class="set-name"><%= set.name %></h2>
            <p class="text-gray-600">Year: <%= set.year %></p>
            <p class="text-gray-600">Parts: <%= set.num_parts %></p>
            <div class="mt-4 flex gap-2">
              <a href="/lego/sets/<%= set.set_num %>" class="btn btn-primary">View Details</a>
              <a href="/lego/editSet/<%= set.set_num %>" class="btn btn-secondary">Edit</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>

</html>
